{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "rootDir": "./src",
    "incremental": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/__tests__/*"
  ]
}
